@model IMDB.ViewModels.AssignsViewModel
@{
    ViewBag.Title = "Assign movie to actor";
}

<!DOCTYPE html>

<html>
<head>
    <link href="~/Content/CreationForm.css" rel="stylesheet" />
    <meta name="viewport" content="width=device-width" />
</head>
<body>

    <div class="IMDB-image">
        <a href="Home"><img src="~/Image/IMDb Image.png" alt="IMDb logo" /></a>
    </div>

    <div class="creation-form">
        <h1 class="Header">Assign Movie to Actor</h1>


        @using (Html.BeginForm("MovieToActor", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()

            <div class="text-line">
                @Html.LabelFor(text => text.MovieActor.ActorID, "Actor Name")
                @Html.DropDownListFor(name => name.MovieActor.ActorID, new SelectList(Model.Actors, "ActorID", "FirstName"), "Select The Actor", new { @class = "list" })
                <span style="color:red">@Html.ValidationMessageFor(name => name.MovieActor.ActorID)</span>
            </div>

            <div class="text-line">
                @Html.LabelFor(text => text.MovieActor.MovieID, "Movie Name")
                @Html.DropDownListFor(name => name.MovieActor.MovieID, new SelectList(Model.Movies, "MovieID", "MovieName"), "Select The Movie", new { @class = "list" })
                <span style="color:red">@Html.ValidationMessageFor(name => name.MovieActor.MovieID)</span>
            </div>

            <div class="text-line">
                <h4 style="color:red;">@TempData["Message"]</h4>
                <input type="submit" value="Assign" class="button" aria-label="File browser example" />
                @Html.ActionLink("Back", "Home", new { @class = "Linkbutton" }, new { @id = "BackBtn" })
            </div>
            
        }
    </div>


</body>
</html>